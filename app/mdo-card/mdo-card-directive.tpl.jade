md-card(ng-repeat='article in mdoCard.articles')
  md-card-header(layout-fill).mdo-card-header {{article.name}}

  md-card-content(layout-fill)
      p(flex) {{article.description}}

  md-card-footer.md-actions(layout="row" layout-align="space-between center")
    md-tags(layout="row")
      md-button.mdo-card-tag(ng-repeat='tag in article.tags') {{tag}}

    md-author
      b author: {{article.authorName}}
      img(src="{{article.image || '../../images/defaultPerson.png'}}").mdo-card-img

