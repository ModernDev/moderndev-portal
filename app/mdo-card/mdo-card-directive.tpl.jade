div(layout="row" layout-sm="column" layout-wrap)
  md-card(ng-repeat='article in mdoCard.articles' flex-sm="95" flex-gt-md="25").mdo-card-default
    md-card-header.mdo-card-header
      img(layout-sm=".img-rotate" src="{{article.headerImg}}" href="/article/{{article.link}}").mdo-card-img-header

    md-card-content.mdo-card-content
      p(flex) {{article.description}}
      div(layout="row" layout-align="space-between center" flex)
        md-button.md-raised.md-primary(href="/article/{{article.link}}" flex="25") Article
        md-card(layout="row" layout-align="space-between center" flex="25")
          div
            i.fa.fa-thumbs-o-up {{article.posRating}}
          div
            i.fa.fa-thumbs-o-down {{article.negRating}}

    md-card-footer.md-actions(layout="row" layout-align-sm="start center" layout-align="space-between center" hide-sm)
      md-tags(layout="row")
        md-button.mdo-card-tag(ng-repeat='tag in article.tags') {{tag}}

      md-card(layout="row" layout-align="space-between center")
        img(src="{{article.image || '../../images/defaultPerson.png'}}").mdo-card-img-author
        b {{article.authorName}}
